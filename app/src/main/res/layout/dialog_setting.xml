<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@drawable/progress_custom_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"

    >
    <TextView
        android:id="@+id/wifiSet_tv"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="#fff"
        android:text="@string/wifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
    <!--<TextView
        android:id="@+id/netSet_tv"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="#fff"
        android:text="@string/netWork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />-->
    <TextView
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
    <TextView
        android:id="@+id/updateSet_tv"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="#fff"
        android:text="@string/updateApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
    <TextView
        android:id="@+id/timeSet_tv"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="#fff"
        android:text="@string/timeSet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
    <TextView
        android:id="@+id/languageSet_tv"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="#fff"
        android:text="@string/language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
    <TextView
        android:layout_weight="1"
        android:textSize="16sp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:textColor="#fff"
        android:text="@string/changeDelay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.xw.repo.BubbleSeekBar
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:id="@+id/my_seekbar"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:bsb_bubble_color="@color/fbutton_color_belize_hole"
        app:bsb_bubble_text_color="#fff"
        app:bsb_max="30"
        app:bsb_min="0"
        app:bsb_progress="5"
        app:bsb_second_track_color="@color/fbutton_color_belize_hole"
        app:bsb_section_count="6"
        app:bsb_section_text_position="below_section_mark"
        app:bsb_touch_to_seek="true"
        app:bsb_show_progress_in_float="true"
        app:bsb_show_section_mark="true"
        app:bsb_show_section_text="true"
        app:bsb_show_thumb_text="true"
        app:bsb_auto_adjust_section_mark="true"
        app:bsb_track_color="@color/fbutton_color_asbestos"/>
    <cn.carbswang.android.numberpickerview.library.NumberPickerView
        android:layout_marginRight="2dp"
        android:layout_weight="1"
        android:id="@+id/hour_npv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:npv_DividerColor="@color/fbutton_color_asbestos"
        app:npv_TextColorNormal="@color/fbutton_color_asbestos"
        app:npv_TextColorSelected="@color/fbutton_color_belize_hole"
        app:npv_ItemPaddingHorizontal="5dp"
        app:npv_ItemPaddingVertical="5dp"
        app:npv_TextColorHint="#fff"
        app:npv_HintText="@string/hour"
        app:npv_ShowCount="3"
        app:npv_TextArray="@array/hour"
        app:npv_RespondChangeOnDetached="false"
        app:npv_TextSizeNormal="16sp"
        app:npv_TextSizeSelected="20sp"
        app:npv_WrapSelectorWheel="true"/>
    <cn.carbswang.android.numberpickerview.library.NumberPickerView
        android:layout_marginRight="2dp"
        android:layout_weight="1"
        android:id="@+id/minute_npv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:npv_DividerColor="@color/fbutton_color_asbestos"
        app:npv_TextColorNormal="@color/fbutton_color_asbestos"
        app:npv_TextColorSelected="@color/fbutton_color_belize_hole"
        app:npv_ItemPaddingHorizontal="5dp"
        app:npv_ItemPaddingVertical="5dp"
        app:npv_TextColorHint="#fff"
        app:npv_HintText="@string/minute"
        app:npv_ShowCount="3"
        app:npv_TextArray="@array/minute_or_second_display"
        app:npv_RespondChangeOnDetached="false"
        app:npv_TextSizeNormal="16sp"
        app:npv_TextSizeSelected="20sp"
        app:npv_WrapSelectorWheel="true"/>
    <cn.carbswang.android.numberpickerview.library.NumberPickerView
        android:layout_weight="1"
        android:id="@+id/second_npv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:npv_DividerColor="@color/fbutton_color_asbestos"
        app:npv_TextColorNormal="@color/fbutton_color_asbestos"
        app:npv_TextColorSelected="@color/fbutton_color_belize_hole"
        app:npv_ItemPaddingHorizontal="5dp"
        app:npv_ItemPaddingVertical="5dp"
        app:npv_TextColorHint="#fff"
        app:npv_HintText="@string/second"
        app:npv_ShowCount="3"
        app:npv_TextArray="@array/minute_or_second_display"
        app:npv_RespondChangeOnDetached="false"
        app:npv_TextSizeNormal="16sp"
        app:npv_TextSizeSelected="20sp"
        app:npv_WrapSelectorWheel="true"/>
</LinearLayout>
</LinearLayout>